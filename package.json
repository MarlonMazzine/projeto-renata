{
  "name": "node-react",
  "version": "1.0.0",
  "scripts": {
    "client": "cd cliente && npm start",
    "server": "node server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev:server": "cd client && yarn build && cd .. && yarn start",
    "start": "node server.js",
    "heroku-postbuild": "cd cliente && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "pg": "^8.3.0",
    "websocket-extensions": "^0.1.4"
  },
  "engines": {
    "node": "12.x"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  }
}
